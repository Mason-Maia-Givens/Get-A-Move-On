    <h2>YOUR UPCOMING MOVE</h2>
    {{#if confirmedClientMove}}
        <div id="confirmed-move">
        <p>Moving to {{confirmedClientMove.end_address}}</p>
        <p>With {{moverMove.first_name}} {{moverMove.last_name}}</p>
        <p>On {{dateFormat confirmedClientMove.move_date}}</p>
        <p>Status: {{confirmedClientMove.status}}</p>
        </div>
    {{else}}
        <div id="created-move"></div>
        <p>Moving to {{currentMove.end_address}}</p>
        <p>On {{dateFormat currentMove.move_date}}</p>
        </div>

        <h2>ALL AVAILABLE MOVERS</h2>
        {{#each allMovers as |mover| }}
        <div id="mover-{{mover.id}}" data-id="{{mover.id}}" data-hourly="{{mover.price_per_hour}}">
            <h3>{{mover.first_name}} {{mover.last_name}}</h3>
            <p>{{mover.gender}}</p>
            <p>{{mover.price_per_hour}}</p>
            <p>{{mover.vehicle_model}}</p>
            <p>{{mover.crew}}</p>
            <button class="confirm">HIRE</button>
        </div>
        {{/each}}
    {{/if}}

