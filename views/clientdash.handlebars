</header>


<main>
  <div>

<p class="font-bold uppercase text-gray-600 text-center">Hello, {{currClient.first_name}}</p>
<button class= "bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-4 rounded-full">New Move</button>
<button class= "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" id="logout">Log Out</button>
</div>
    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
    <div class="bg-gradient-to-b from-pink-100 to-yellow-100 border-b-4 border-pink-300 rounded-lg shadow-xl p-5 flex">
    <h2 class="font-bold uppercase text-gray-600 text-center>YOUR UPCOMING MOVE</h2>
    {{#if confirmedClientMove}}
        <div  class="font-bold uppercase text-gray-600 text-center id="confirmed-move">
        <p class ="font-bold uppercase text-black">Moving to {{confirmedClientMove.end_address}}</p>
        <p class ="font-bold uppercase text-black">With {{moverMove.first_name}} {{moverMove.last_name}}</p>
        <p class ="font-bold uppercase text-black">On {{dateFormat confirmedClientMove.move_date}}</p>
        <p class ="font-bold uppercase text-black">Status: {{confirmedClientMove.status}}</p>
        </div>
    {{else}}
    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
    <div class="bg-gradient-to-b from-red-400 to-yellow-100 border-b-4 border-yellow-100 rounded-lg shadow-xl p-5 flex">
        <div class="font-bold uppercase text-gray-600 text-center" id="created-move"></div>
        <p class ="font-bold uppercase text-black">Moving to {{moveStatus.end_address}} On {{dateFormat moveStatus.move_date}}</p>
        </div>
         </div>
          

 <div class="mover-container w-full md:w-1/2 xl:w-1/3 p-6">
 <h2>ALL AVAILABLE MOVERS</h2>
        <div class="mover-card-holder font-bold uppercase text-gray-600 text-center">
        {{#each allMovers as |mover| }}
        <div  class="mover-card bg-gradient-to-b from-orange-300 to-slate-50 border-b-4 border-orange-300 rounded-lg shadow-xl p-5 flex font-bold uppercase text-gray-600 text-center" id= "mover-{{mover.id}}" data-id="{{mover.id}}" data-hourly="{{mover.price_per_hour}}">
            <h3 class="font-bold uppercase text-black text-center">{{mover.first_name}} {{mover.last_name}}</h3>
            <p class ="font-bold uppercase text-black">{{mover.gender}}</p>
            <p class ="font-bold uppercase text-black">Hourly Wage: ${{mover.price_per_hour}}</p>
            <p class ="font-bold uppercase text-black">Vehicle: {{mover.vehicle_model}}</p>
            <p class ="font-bold uppercase text-black">Crew: {{mover.crew}}</p>
            <button class="confirm">HIRE</button>
        
        {{/each}}
        </div>
    {{/if}}
    </div>
</div>
</div>
