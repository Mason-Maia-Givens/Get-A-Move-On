    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
    <div class="bg-gradient-to-b from-pink-100 to-yellow-100 border-b-4 border-pink-300 rounded-lg shadow-xl p-5 flex">
   <div class="font-bold uppercase text-gray-600 text-center"> <h2> SCHEDULED MOVES</h2>
    {{#if confirmedMoves}}
        {{#each confirmedMoves as |conMove| }}
        <div class="flex flex-row items-center">
     <div class="flex-shrink pr-4">
        <div id="{{conMove.client.id}}">
            <p class="font-bold uppercase text-black">Moving {{conMove.client.first_name}} {{conMove.client.last_name}}</p>
            <p class="font-bold uppercase text-black">From {{conMove.client.current_address}}</p>
            <p class= "font-bold uppercase text-black">To {{conMove.end_address}}</p>
            <p class= "font-bold uppercase text-black">On {{dateFormat conMove.move_date}}</p>
            <p class= "font-bold uppercase text-black">Status: {{conMove.status}}</p>
            <button class= "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"id="cancel">Cancel</button>
        </div>
        {{/each}}
    {{else}}
        <p class="font-bold uppercase text-black"">No moves scheduled!</p>
    {{/if}}

    <h2 class="font-bold uppercase text-gray-600 text-center">REQUESTED MOVES</h2>
    {{#if pendingMoves}}
        {{#each pendingMoves as |penMove| }}
        <div id="{{penMove.client.id}}">
            <p class="font-bold uppercase text-black" >Moving {{penMove.client.first_name}} {{penMove.client.last_name}}</p>
            <p class="font-bold uppercase text-black">From {{penMove.client.current_address}}</p>
            <p class="font-bold uppercase text-black">To {{penMove.end_address}}</p>
            <p class="font-bold uppercase text-black">On {{dateFormat penMove.move_date}}</p>
            <p class="font-bold uppercase text-black">Status: {{penMove.status}}</p>
            <button  class= "bg-green-600 hover:bg-green-200 text-white font-bold py-2 px-4 rounded-full" id="accept">Accept</button>
            <button  class= "bg-red-600 hover:bg-red-400 text-white font-bold py-2 px-4 rounded-full" id="decline">Decline</button>
        </div>
        {{/each}}
    {{else}}
        <p class="font-bold uppercase text-black">No moves requested!</p>
    {{/if}}

    <h2 class="font-bold uppercase text-gray-600 text-center">COMPLETED MOVES</h2>
    {{#if completedMoves}}
        {{#each completedMoves as |comMove| }}
        <p class="font-bold uppercase text-black">Moving {{comMove.client.first_name}} {{comMove.client.last_name}}</p>
        <p class="font-bold uppercase text-black">From {{comMove.client.current_address}}</p>
        <p class="font-bold uppercase text-black">To {{comMove.end_address}}</p>
        <p class="font-bold uppercase text-black">On {{dateFormat comMove.move_date}}</p>
        <p class="font-bold uppercase text-black">Status: {{comMove.status}}</p>
        {{/each}}
    {{else}}
        <p>No moves completed!</p>
    {{/if}}

    <script src="/js/mover_buttons.js"></script>
    </div>